#include <iostream>

using namespace std;

int main()
{
    setlocale(LC_ALL, "");
    char decyzja;
    int a, b;
    cout << "Jakie działanie chcesz wykonać?" << endl;
    cin >> decyzja;
    if (decyzja == "dodawanie")
        dodawanie(a, b);
    else if (decyzja == "odejmowanie")
        dzielenie(a, b)
    else if (decyzja == "mnozenie")
        mnozenie(a, b);
    else if (decyzja == 'dzielenie")
        dzielenie(a, b);
    return 0;
}

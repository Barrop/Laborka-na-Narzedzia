#include <iostream>

using namespace std;

int main()
{
    setlocale(LC_ALL, "");
    char decyzja;
    int c, d;
    cout << "Jakie działanie chcesz wykonać?" << endl;
    cin >> decyzja;
    if (decyzja == "dodawanie")
        dodawanie(c, d);
    else if (decyzja == "odejmowanie")
        dzielenie(c, d)
    else if (decyzja == "mnozenie")
        mnozenie(c, d);
    else if (decyzja == 'dzielenie")
        dzielenie(c, d);
    return 1;

}
